[user]
	name = Gabriele Lippi
	email = gabriele@lippi.net
[core]
	editor = nvim
	excludesfile = ~/.gitexcludes
[color]
	ui = true
[push]
	default = simple
[merge]
	tool = vimdiff
[mergetool]
	prompt = true
	keepBackup = false
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[alias]
	s = status -sb
	sw = switch
	b = branch
	c = commit -v
	a = add
	re = restore
	l = pull
	p = push
	f = fetch
	mt = mergetool
	m = merge
	r = rebase
	lg = log --stat
	d = diff
[commit]
	gpgsign = false
[pull]
	rebase = true
[include]
	path = ~/.gitconfig_local
[init]
	defaultBranch = main
[diff]
	external = difft
